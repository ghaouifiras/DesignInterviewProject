<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBlueBckGround"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLogo"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        />

    <TextView
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Welcome to 4In Shield!\nSign in to continue"
        app:layout_constraintStart_toStartOf="@+id/btnMail"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <EditText
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:id="@+id/btnMail"
        android:textAlignment="textStart"
        android:hint="Username"
        android:background="@drawable/roundcorner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:layout_width="310dp"
        android:layout_height="50dp"/>
    <EditText
        android:background="@drawable/roundcorner"

        android:layout_marginTop="12dp"
        android:textAllCaps="false"
        android:id="@+id/password"
        android:textAlignment="textStart"
        android:hint="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMail"
        android:layout_width="310dp"
        android:layout_height="50dp"/>
    
    <androidx.appcompat.widget.AppCompatButton

        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:id="@+id/btnFacebook"
        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
        android:text="Sign in"
        android:background="@drawable/roundcorner"
        android:textColor="@color/myBlueBckGround"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Forgot password ?"
        android:linksClickable="true"
        app:layout_constraintStart_toStartOf="@+id/btnMail"
        app:layout_constraintTop_toBottomOf="@+id/btnFacebook"
        android:id="@+id/noAccount"
        android:drawableBottom="@drawable/underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>